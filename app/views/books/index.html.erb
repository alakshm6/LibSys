<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.ISBN %></td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= link_to 'Show', book %></td>
        <%@user=User.find_by_id(session[:current_user_id])%>
        <%if(@user.user_type=='A' || @user.user_type=='P')%>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>

        <% if book.status == 'Available' %>
        <td>  <%= link_to 'Checkout', book, method: :checkout, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
        <% if book.status == 'Checked out'%>
            <%@checkout_history=CheckoutHistory.find_by_ISBN(book.ISBN)%>

            <%if !@checkout_history.nil? %>
                    <%if(@checkout_history.email== @user.email || @user.user_type=='A' || @user.user_type=='P' )%>

            <td>  <%= link_to 'Return', book, method: :checkout, data: { confirm: 'Are you sure?' } %></td>
                   


                <% end %>
            <%end%>
            <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%@user=User.find_by_id(session[:current_user_id])%>
<%if(@user.user_type=='A' || @user.user_type=='P')%>
<%= link_to 'New Book', new_book_path %>
<%end%>