<p id="notice"><%= notice %></p>
<head>

<style>
    thead
    {
        background-color: gainsboro;
        color: #ffffff;
        border: 1px solid #000000;
    }
</style>
</head>


<%= form_tag({controller: "books", action: "search_display"}, method: "post") do %>


    <%= radio_button_tag(:search_type, "isbn", :checked) %>
    <%= label_tag(:search_type_isbn, "ISBN") %>

    <%= radio_button_tag(:search_type, "title") %>
    <%= label_tag(:search_type_title, "Title") %>

    <%= radio_button_tag(:search_type, "author") %>
    <%= label_tag(:search_type_author, "Author") %>

    <%= radio_button_tag(:search_type, "description") %>
    <%= label_tag(:search_type_description, "Description") %>

    <%= radio_button_tag(:search_type, "available") %>
    <%= label_tag(:search_type_available, "Available") %>

    <%= text_field_tag(:search_value) %>
    <%= submit_tag("Search") %>


<% end %>

<p></p><br>
<hr>

<h1>List of Searched Books</h1>
<p><%= @book_count %> book(s) matches your search criteria.</p>


<table width="100%">
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Status</th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.ISBN %></td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
       
      </tr>

  <% end %>
  </tbody>
</table>

<br>


<% if false %>
    <%= link_to 'Search More Books', controller: "books", action: "search" %>
<% end %>


